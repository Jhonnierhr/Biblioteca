@model Biblioteca.Models.Usuario

@{
    ViewData["Title"] = "Eliminar Usuario";
}

<h1>Eliminar Usuario</h1>

<h3>¿Estás seguro que deseas eliminar este usuario?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">@Model._idUsario</dd>

        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model._nombre</dd>

        <dt class="col-sm-2">Dirección</dt>
        <dd class="col-sm-10">@Model._direccion</dd>

        <dt class="col-sm-2">Número de Teléfono</dt>
        <dd class="col-sm-10">@Model._numeroTelefono</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="_idUsario" />
    <input type="submit" value="Eliminar" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
