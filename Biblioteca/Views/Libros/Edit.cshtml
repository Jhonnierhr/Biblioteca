@model Biblioteca.Models.Libro

@{
    ViewData["Title"] = "Editar Libro";
}

<h1>Editar Libro</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="_idLibro" />
    <div class="form-group">
        <label asp-for="_titulo" class="control-label">Título</label>
        <input asp-for="_titulo" class="form-control" />
        <span asp-validation-for="_titulo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="_autor" class="control-label">Autor</label>
        <input asp-for="_autor" class="form-control" />
        <span asp-validation-for="_autor" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="_genero" class="control-label">Género</label>
        <input asp-for="_genero" class="form-control" />
        <span asp-validation-for="_genero" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="_añoDePublicacion" class="control-label">Año de Publicación</label>
        <input asp-for="_añoDePublicacion" class="form-control" type="number" />
        <span asp-validation-for="_añoDePublicacion" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
