@model Biblioteca.Models.Prestamo

@{
    ViewData["Title"] = "Eliminar Préstamo";
}

<h1>Eliminar Préstamo</h1>

<h3>¿Estás seguro que deseas eliminar este préstamo?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">@Model._idPrestamo</dd>

        <dt class="col-sm-2">Libro</dt>
        <dd class="col-sm-10">@Model.Libro?._titulo</dd>

        <dt class="col-sm-2">Usuario</dt>
        <dd class="col-sm-10">@Model.Usuario?._nombre</dd>

        <dt class="col-sm-2">Fecha Inicio</dt>
        <dd class="col-sm-10">@Model._fechaInicio.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">Fecha Fin</dt>
        <dd class="col-sm-10">@Model._fechaFin.ToString("dd/MM/yyyy")</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="_idPrestamo" />
    <input type="submit" value="Eliminar" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>